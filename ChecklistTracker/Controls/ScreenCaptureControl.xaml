<?xml version="1.0" encoding="UTF-8"?>
<UserControl
    x:Class="ChecklistTracker.Controls.ScreenCaptureControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodel="using:ChecklistTracker.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel MaxHeight="{x:Bind LayoutParams.Height}" MaxWidth="{x:Bind LayoutParams.Width}">
        <Button
            x:Name="CaptureButton"
            Content="Capture"
            Click="OnClickCaptureScreenshot"
            RelativePanel.AlignTopWithPanel="True">
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator
                    Modifiers="Control"
                    Key="C"/>
            </Button.KeyboardAccelerators>
        </Button>
        <GridView 
            Name="Screenshots"
            ItemsSource="{x:Bind ViewModel.Screenshots, Mode=OneWay}"
            SelectionMode="None"
            RelativePanel.Below="CaptureButton"
            RelativePanel.AlignBottomWithPanel="True">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="viewmodel:ScreenCapture">
                    <RelativePanel>
                        <Image
                            Source="{x:Bind Screenshot, Mode=OneWay}"
                            Width="{x:Bind LayoutParams.Width}"
                            Height="{x:Bind LayoutParams.Height}" />
                    </RelativePanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </RelativePanel>
</UserControl>