<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ChecklistTracker.Controls.HintStoneControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChecklistTracker.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel>
        <Image
            x:Name="Image"
            Source="{x:Bind ViewModel.CurrentImage, Mode=OneWay}"
            Width="{x:Bind LayoutParams.Width, Mode=OneWay}"
            Height="{x:Bind LayoutParams.Height, Mode=OneWay}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"/>
    </RelativePanel>
</UserControl>
