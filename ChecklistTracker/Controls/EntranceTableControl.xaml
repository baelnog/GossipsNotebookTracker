<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ChecklistTracker.Controls.EntranceTableControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChecklistTracker.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ChecklistTracker.ViewModel"
    mc:Ignorable="d">

    <StackPanel
        Orientation="Horizontal">
        <ItemsView ItemsSource="{x:Bind ViewModel.SortedHintStones, Mode=OneWay}"
                      x:Name="HintStones"
                      Margin="0"
                      Padding="0"
                   SelectionMode="None">
            <ItemsView.ItemTemplate>
                <DataTemplate x:DataType="model:EntranceViewModel">
                    <ItemContainer>
                        <local:EntranceControl ViewModel="{x:Bind EntranceVM}" Margin="1"/>
                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>
        </ItemsView>

    </StackPanel>
</UserControl>
