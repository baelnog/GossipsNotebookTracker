<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ChecklistTracker.Controls.RewardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChecklistTracker.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel>
        <Image 
            x:Name="Image"
            Source="{x:Bind ViewModel.CurrentImage, Mode=OneWay}"
            Width="{x:Bind Layout.Width, Mode=OneWay}"
            Height="{x:Bind Layout.Height, Mode=OneWay}" />
        <RelativePanel
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignBottomWithPanel="True"
                Margin="-14,0,-14,-6">

            <RelativePanel
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                Background="{x:Bind TextStyle.TextBackgroundColor, Mode=OneWay}"
                Opacity="{x:Bind TextStyle.TextBackgroundOpacity.Value, Mode=OneWay}"
                />
            <TextBlock 
                x:Name="RewardLabel"
                Text="{x:Bind ViewModel.Label, Mode=OneWay}"
                Foreground="{x:Bind TextStyle.TextColor, Mode=OneWay}"
                FontSize="{x:Bind TextStyle.FontSize.Value, Mode=OneWay}"
                FontFamily="{x:Bind TextStyle.FontFamily, Mode=OneWay}"
                FontStyle="{x:Bind TextStyle.FontStyle, Mode=OneWay}"
                FontWeight="{x:Bind TextStyle.FontWeight, Mode=OneWay}"
                HorizontalTextAlignment="Center"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                />
        </RelativePanel>
    </RelativePanel>
</UserControl>
