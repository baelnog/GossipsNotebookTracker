<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ChecklistTracker.Controls.RewardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChecklistTracker.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel>
        <Image 
            x:Name="Image"
            Source="{x:Bind ViewModel.CurrentImage, Mode=OneWay}"
            Width="{x:Bind ImageWidth, Mode=OneWay}"
            Height="{x:Bind ImageHeight, Mode=OneWay}" />
        <StackPanel Background="Black"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignBottomWithPanel="True"
                Margin="-14,0,-14,-6">

            <TextBlock 
                x:Name="RewardLabel"
                Text="{x:Bind ViewModel.Label, Mode=OneWay}"
                Foreground="White"
                FontWeight="Bold"
                FontSize="9.5"
                HorizontalTextAlignment="Center" 
                />
        </StackPanel>
    </RelativePanel>
</UserControl>
